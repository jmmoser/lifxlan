{
  "name": "lifxlan",
  "version": "0.0.64",
  "description": "LIFX LAN protocol in JavaScript",
  "types": "./types/index.d.ts",
  "module": "./src/index.js",
  "main": "./src/index.js",
  "type": "module",
  "unpkg": "./dist/lifxlan.min.js",
  "scripts": {
    "node:test": "node --test --experimental-test-coverage",
