    "lan"
  ],
  "files": [
    "src/**/*",
    "types/**/*",
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmmoser/lifxlan.git"
  },
  "author": "Justin Moser",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "oxlint": "^0.15.5",
    "typescript": "^5.7.2"
  }
}
