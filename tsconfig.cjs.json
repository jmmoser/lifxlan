{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node10",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/cjs"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.ts",
    "node_modules",
    "dist"
  ]
}